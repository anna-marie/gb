							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :e_water_purifier, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Use to purify water", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :description, as: :text, input_html: { maxlength: 3000 }, 
	                        label: "Other information", label_html: { class: 'labels'} %>
	  
	  <%= f.input :sources, as: :text, input_html: { maxlength: 500 }, 
	                        label: "Sources", label_html: { class: 'labels'} %>

      <%= f.submit "Create new plant", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>