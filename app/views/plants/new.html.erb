<% provide(:title, 'Add a plant') %>
<h1>Add a plant</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for(@plant) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
	  
	  <%= f.input :common_name, input_html: { maxlength: 80 }, label: "Common name",    
	                label_html: { class: 'labels'} %>
	  
	  <%= f.input :genus, input_html: { maxlength: 80 }, label: "Genus",    
	                label_html: { class: 'labels' } %>
	  
	  <%= f.input :species, input_html: { maxlength: 80 }, label: "Species",    
	                label_html: { class: 'labels' } %>
	  
	  <%= f.input :layer_id, collection: @layers, label_method: :content, value_method: :id, label: "Guild layer", label_html: { class: 'labels' }, :include_blank => "Unknown" %>
	  
	  <%= f.input :layer2_id, collection: @layers, label_method: :content, value_method: :id, label: "Guild layer 2 (if applicable because of height range)", label_html: { class: 'labels' }, :include_blank => "Unknown" %>
	  
	  <%= f.input :us_zone_max, collection: 0..12, label: "USDA zone", label_html: { class: 'labels' }, :include_blank => "Unknown" %>
	  
	  <%= f.input :cdn_zone_max, collection: 0..8, label: "Canadian zone", label_html: { class: 'labels' }, :include_blank => "Unknown" %>
	  
	  <%= f.input :type_id, collection: @types, label_method: :content, value_method: :id, label: "Type", label_html: { class: 'labels' }, :include_blank => "Unknown" %>
	  
	  <%= f.input :light_id, collection: @lighting, label_method: :content, value_method: :id, label: "Light", label_html: { class: 'labels' }, :include_blank => "Unknown" %>
	  
	  <%= f.input :drought_resistant, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Drought Resistant", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_n_fixer, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Nitrogen fixer", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_biomass, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Biomass", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_hedgerow, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Hedgerow", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_nutrient_accumulator, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Nutrient accumulator", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_cover_crop, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Cover crop", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_windbreak, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Windbreak", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_mulch, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Mulch", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_repel_pests, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Repels pests", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_repel_invaders, as: :radio_buttons, 
	                        collection: [['Yes', true], ['No', false]], label: "Repels invaders", label_html: { class: 'labels'}, 
							item_wrapper_class: 'inline' %>
	  
	  <%= f.input :p_taproot, as: :radio_buttons, 
